{
  "dashboard": {
    "title": "Demo App Monitoring",
    "tags": ["kubernetes", "demo"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(nginx_http_requests_total{namespace=\"demo-app\"}[5m]))",
            "legendFormat": "Requests/sec"
          }
        ]
      },
      {
        "title": "Pod CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"demo-app\",pod=~\"demo-app-.*\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ]
      },
      {
        "title": "Pod Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{namespace=\"demo-app\",pod=~\"demo-app-.*\"}) by (pod) / 1024 / 1024",
            "legendFormat": "{{pod}}"
          }
        ]
      },
      {
        "title": "Active Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(nginx_connections_active{namespace=\"demo-app\"})",
            "legendFormat": "Active Connections"
          }
        ]
      },
      {
        "title": "Pod Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "count(kube_pod_status_phase{namespace=\"demo-app\",phase=\"Running\"})",
            "legendFormat": "Running Pods"
          }
        ]
      },
      {
        "title": "Redis Memory",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "redis_memory_used_bytes{namespace=\"demo-app\"} / 1024 / 1024",
            "legendFormat": "Memory (MB)"
          }
        ]
      },
      {
        "title": "Response Time (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(nginx_http_request_duration_seconds_bucket{namespace=\"demo-app\"}[5m])) by (le))",
            "legendFormat": "p95 latency"
          }
        ]
      },
      {
        "title": "Network I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total{namespace=\"demo-app\"}[5m]))",
            "legendFormat": "RX"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total{namespace=\"demo-app\"}[5m]))",
            "legendFormat": "TX"
          }
        ]
      }
    ],
    "refresh": "10s",
    "time": {"from": "now-30m", "to": "now"}
  }
}